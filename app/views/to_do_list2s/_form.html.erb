<%= form_for @to_do_list2, :html => { :class => "form-horizontal to_do_list2" } do |f| %>

  <% if @to_do_list2.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@to_do_list2.errors.count, "error") %> prohibited this to_do_list2 from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @to_do_list2.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :task_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :task_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:task_name) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                to_do_list2s_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
